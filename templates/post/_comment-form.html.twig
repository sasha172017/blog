<div class="row justify-content-center">

    <div class="col-xl-10">
        <small class="text-muted mx-1"> <i class="fas fa-user"></i> {{ app.user.nickname }}</small>

        {{ form_start(form, {method: 'POST', action: path('comment_new', {'id': post.id}), attr : {'id' : 'comment-new-form'}}) }}

        <div class="form-group {% if not form.content.vars.valid %}has-error{% endif %}">

            {{ form_errors(form.content) }}

            {{ form_widget(form.content) }}

            {{ form_help(form.content) }}
        </div>

        <div class="mb-3 text-right">
            <button class="btn btn-outline-success btn-sm" type="submit">
                <i class="fa fa-paper-plane" aria-hidden="true"></i> {{ 'comment.publish'|trans }}
            </button>
        </div>
        {{ form_end(form) }}

    </div>

</div>



