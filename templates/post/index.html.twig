{% extends 'base.html.twig' %}

{% block content %}

    {% if category is defined %}
        <div class="text-center my-4">
            <h1>{{ category.title }} </h1>
        </div>
    {% endif %}

    {% if user is defined %}
        <div class="text-center my-4">
            <h1>{{ user.nickname }} posts</h1>
        </div>
    {% endif %}

    {% for i, post in pagination %}

        <div class="card my-4 dynamic-shadow">
            {% if post.image is not empty %}
                <img class="card-img-top" src="{{ asset('uploads/posts/' ~ post.image) }}" alt="">
            {% endif %}
            <div class="card-body">
                <h2 class="card-title">{{ post.title }}</h2>
                <p class="card-text">
                    {{ post.summary }}
                </p>

                <a href="{{ path('post_show', {'slug' : post.slug}) }}" class="btn btn-primary btn-sm">Read more</a>

            </div>
            <div class="card-footer text-muted d-flex justify-content-between">

                <div class="d-flex">
                    <div class="mr-3" data-toggle="tooltip" data-placement="top" data-html="true" title="Views: {{ post.views }}">
                        <i class="far fa-eye"></i> {{ post.views }}
                    </div>
                    <div class="mr-3" data-toggle="tooltip" data-placement="top" data-html="true" title="Comments: {{ post.comments|length }}">
                        <i class="far fa-comments"></i> {{ post.comments|length }}
                    </div>
                    <div class="mr-3" data-toggle="tooltip" data-placement="top" data-html="true" title="Total votes: {{ post.ratingUp + post.ratingDown }}<br><i class='fas fa-long-arrow-alt-up'></i>{{ post.ratingUp }} <i class='fas fa-long-arrow-alt-down'></i>{{ post.ratingDown }}">
                        <i class="fas fa-long-arrow-alt-up"></i>
                        {% set rating = post.ratingUp - post.ratingDown %}
                        {% if rating > 0 %}
                            <span class="text-success">+{{ rating }}</span>
                        {% else %}
                            <span class="text-danger">{{ rating }}</span>
                        {% endif %}
                        <i class="fas fa-long-arrow-alt-down"></i>
                    </div>
                </div>

                <div class="d-flex">
                    <div class="pointer mr-3" data-toggle="tooltip" data-placement="top" title="Created: {{ post.createdAt|date('d F Y, H:m:s') }}">
                        <small>
                            <i class="far fa-calendar-alt"></i> {{ post.updatedAt|date('d F Y, H:m') }}
                        </small>
                    </div>

                    <div class="cursor-pointer" data-container="body" data-toggle="popover" data-placement="top" data-html="true" data-content=" <a href='{{ path('user_posts', {'nickname' : post.author.nickname}) }}'>posts</a>">
                        <small>
                            <i class="fas fa-user"></i> {{ post.author.nickname }}
                        </small>
                    </div>

                </div>

            </div>
        </div>

    {% else %}
        <div class="alert alert-primary my-4 text-center" role="alert">No records found!</div>
    {% endfor %}

    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}

{% block sidebar %}

    <div class="sticky-top sticky-sidebar">
        {{ include('default/user-block.html.twig') }}

        {{ render(controller('App\\Controller\\CategoryController::list')) }}
    </div>

{% endblock %}